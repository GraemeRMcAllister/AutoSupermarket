@model Product
@{
}
 
<h1>Add Item</h1>
<form asp-controller="Product" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control col-xl-3" required />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control col-xl-3" required />
    </div>
    <button class="btn btn-success" type="submit">Add Item</button>
</form>

